<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/receive_message_photo"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/unknow_profile"
            android:layout_marginTop="10sp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp" />

            <TextView
                android:id="@+id/receive_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10sp"
                android:text="Kristin Rolberk"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="10sp"/>

        <TextView
            android:id="@+id/sender_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10sp"
            android:background="@drawable/gradient_background_button"
            android:padding="10sp"
            android:text="@string/menu_block"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/sender_message_image"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_margin="10sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/receive_message_image"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_margin="10sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />
</RelativeLayout>